@{
    ViewData["Title"] = "Yêu Thích";
    var key = 0;
}

<h3>Sản Phẩm Yêu Thích</h3>
<a asp-action="Create" asp-controller="Product" class="btn btn-primary mb-3">+ Thêm Sản Phẩm</a>

<table class="table table-bordered table-striped" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên Sản Phẩm</th>
            <th scope="col">Mô Tả</th>
            <th scope="col">Giá (VNĐ)</th>
            <th scope="col">Hình Ảnh</th>
            <th scope="col">Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wishlist_product in Model)
        {
            key++;
            <tr>
                <td>@key</td>
                <td>@wishlist_product.Product.Name</td>
                <td>@Html.Raw(@wishlist_product.Product.Description)</td>
                <td>@wishlist_product.Product.Price.ToString("#,##0") đ</td>
                <td>
                    <img src="~/media/products/@wishlist_product.Product.Image" width="100" style="object-fit: contain;" alt="Ảnh sản phẩm" />
                </td>
                <td><a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteWishlist" asp-controller="Home" asp-route-Id="@wishlist_product.Wishlist.Id">Delete</a></td>


            </tr>
        }
    </tbody>
</table>
