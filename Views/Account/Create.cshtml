@model UserModel // Assuming UserModel contains UserName, Email, Password properties
@{
    Layout = null; // No layout page
    ViewData["Title"] = "Sign Up"; // Changed title for consistency
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        /* Copied and slightly adjusted styles from the Sign In example */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(90deg, #87CEFA 0%, #DDA0DD 100%); /* Gradient background */
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .register-container { /* Renamed class slightly for clarity, but styles are similar */
            background-color: #ffffff;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 450px; /* Slightly wider maybe for labels */
            width: 100%;
            text-align: center;
        }

            .register-container h2 {
                color: #4a148c; /* Dark Purple */
                margin-bottom: 25px;
                font-size: 2em;
                font-weight: 600;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left; /* Keep labels aligned left */
        }

        /* Keep original label styling from your code, maybe adjust font */
        .form-label {
            font-weight: 500;
            color: #555;
            margin-bottom: 8px; /* Add space below label */
            display: inline-block; /* Ensure margin works */
        }

            .form-label i {
                margin-right: 5px; /* Space between icon and text */
                color: #a040ff; /* Use button gradient color for icons */
            }


        .form-control {
            width: 100%;
            padding: 12px 20px; /* Adjusted padding slightly */
            border: 1px solid #eee;
            border-radius: 30px; /* Rounded corners */
            font-size: 0.95em;
            background-color: #f8f9fa; /* Input background */
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control::placeholder {
                color: #aaa;
            }

            .form-control:focus {
                outline: none;
                border-color: #c3a0e3; /* Purple focus border */
                box-shadow: 0 0 8px rgba(195, 160, 227, 0.4); /* Focus glow */
            }

        /* Specific button style */
        .btn-register { /* Renamed class */
            background: linear-gradient(90deg, #d080ff 0%, #a040ff 100%); /* Purple gradient */
            color: white;
            border: none;
            padding: 15px;
            border-radius: 30px; /* Rounded button */
            width: 100%;
            font-size: 1em;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: opacity 0.3s ease;
            margin-top: 10px; /* Space above button */
        }

            .btn-register:hover {
                opacity: 0.9;
            }

        /* Style for the login link */
        .login-link-section {
            margin-top: 25px; /* Space above the link */
            font-size: 0.95em;
        }

            .login-link-section a {
                color: #6a1b9a; /* Purple link color */
                text-decoration: none;
                font-weight: 500;
            }

                .login-link-section a:hover {
                    text-decoration: underline;
                }

        /* Style for validation messages */
        .text-danger {
            color: #dc3545;
            font-size: 0.85em;
            padding-left: 5px; /* Align with input roughly */
            display: block; /* Ensure it takes its own line */
            margin-top: 5px;
        }

        /* Style for validation summary */
        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
            margin: 0 0 15px 0;
        }

        .validation-summary-errors li {
            color: #dc3545;
            font-size: 0.9em;
            text-align: center; /* Center summary errors */
        }

    </style>
</head>
<body>

    <div class="register-container">
        <h2>Sign Up</h2> @* Updated Title *@

        @* Display model-level errors *@
        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>

        <form asp-action="Create" asp-controller="Account" method="post" novalidate>
            @* novalidate prevents default browser validation if using server/js validation *@

            <div class="form-group">
                @* Using form-group class for consistency with CSS *@
                <label asp-for="UserName" class="form-label"><i class="bi bi-person"></i> Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label"><i class="bi bi-envelope"></i> Email</label>
                @* Use type="email" for better input on mobile devices *@
                <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label"><i class="bi bi-lock"></i> Password</label>
                @* Keep type="password" *@
                <input asp-for="Password" class="form-control" type="password" placeholder="Create a secure password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @* Optional: Add Confirm Password field if your UserModel requires it
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"><i class="bi bi-check-circle"></i> Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            *@

            <button type="submit" class="btn-register">Register</button> @* Applied custom button class *@
        </form>

        <div class="login-link-section">
            @* Section for the login link *@
            <a asp-action="Login" asp-controller="Account">Already have an account? Sign In</a>
        </div>
    </div>

    @* No need for separate <link> for Bootstrap Icons here if already in <head> *@

    @* Include validation scripts at the end of the body *@
    @* You might need to manually include jQuery if not using a layout *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>