@model UserModel // Assuming UserModel has an Email property
@{
    Layout = null; // No layout page
    ViewData["title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["title"]</title>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        /* Reusing styles from Sign In / Sign Up */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(90deg, #87CEFA 0%, #DDA0DD 100%); /* Gradient background */
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .forgot-password-container { /* Specific class name */
            background-color: #ffffff;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 420px; /* Adjust width as needed */
            width: 100%;
            text-align: center;
        }

            .forgot-password-container h2 {
                color: #4a148c; /* Dark Purple */
                margin-bottom: 25px;
                font-size: 1.8em; /* Slightly smaller title */
                font-weight: 600;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        /* Optional: Add label styling consistent with Sign Up */
        .form-label {
            font-weight: 500;
            color: #555;
            margin-bottom: 8px;
            display: inline-block;
        }

            .form-label i {
                margin-right: 5px;
                color: #a040ff;
            }

        .form-control {
            width: 100%;
            padding: 12px 20px;
            border: 1px solid #eee;
            border-radius: 30px; /* Rounded corners */
            font-size: 0.95em;
            background-color: #f8f9fa;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control::placeholder {
                color: #aaa;
                font-size: 0.9em; /* Make placeholder slightly smaller if long */
            }

            .form-control:focus {
                outline: none;
                border-color: #c3a0e3;
                box-shadow: 0 0 8px rgba(195, 160, 227, 0.4);
            }

        /* Button style */
        .btn-forgot-password { /* Specific button class */
            background: linear-gradient(90deg, #d080ff 0%, #a040ff 100%); /* Purple gradient */
            color: white;
            border: none;
            padding: 15px;
            border-radius: 30px;
            width: 100%;
            font-size: 1em;
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
            transition: opacity 0.3s ease;
            margin-top: 10px; /* Space above button */
        }

            .btn-forgot-password:hover {
                opacity: 0.9;
            }

        /* Link section */
        .link-section {
            margin-top: 25px;
            font-size: 0.95em;
        }

            .link-section a {
                color: #6a1b9a; /* Purple link color */
                text-decoration: none;
                font-weight: 500;
            }

                .link-section a:hover {
                    text-decoration: underline;
                }

        /* Validation styles */
        .text-danger {
            color: #dc3545;
            font-size: 0.85em;
            padding-left: 5px;
            display: block;
            margin-top: 5px;
        }

        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
            margin: 0 0 15px 0;
        }

        .validation-summary-errors li {
            color: #dc3545;
            font-size: 0.9em;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="forgot-password-container">
        <h2>Forgot Password</h2>
        <p style="color: #666; font-size: 0.95em; margin-bottom: 25px;">Enter your email address below and we'll send you a link to reset your password.</p>

        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>

        <form asp-action="SendMailForgotPass" asp-controller="Account" method="post" novalidate>

            <div class="form-group">
                <label asp-for="Email" class="form-label"><i class="bi bi-envelope"></i> Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your registered email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-forgot-password">Send Reset Link</button>
        </form>

        <div class="link-section">
            <a asp-action="Login" asp-controller="Account">Remembered your password? Sign In</a>
        </div>
    </div>

    @* Include validation scripts directly since Layout = null *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>