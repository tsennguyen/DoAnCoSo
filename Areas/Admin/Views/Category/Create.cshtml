@model CategoryModel
@{
    ViewData["Title"] = "Thêm Danh Mục Mới";
}

<h4>Thêm Danh Mục Mới</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="Name">Tên danh mục</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Mô tả</label>
            <textarea asp-for="Description" class="form-control" placeholder="Mô tả ngắn gọn về danh mục"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Status">Trạng thái hiển thị</label>
            <select asp-for="Status" class="form-control">
                <option value="1">Hiển thị</option>
                <option value="0">Ẩn</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu danh mục</button>
        </div>
    </form>

    <a asp-action="Index" class="btn btn-link">← Quay lại danh sách danh mục</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
