@model BrandModel
@{
    ViewData["Title"] = "Chỉnh Sửa Thương Hiệu";
}

<h4>Chỉnh Sửa Thương Hiệu</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="Name">Tên thương hiệu</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên thương hiệu" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Mô tả</label>
            <textarea asp-for="Description" class="form-control" placeholder="Mô tả ngắn gọn về thương hiệu"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Status">Trạng thái hiển thị</label>
            <select asp-for="Status" class="form-control">
                <option value="1">Hiển thị</option>
                <option value="0">Ẩn</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cập nhật thương hiệu</button>
        </div>
    </form>

    <a asp-action="Index" class="btn btn-link">← Quay lại danh sách thương hiệu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
